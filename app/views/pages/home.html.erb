<style>
  body {
    height: 100vh;
    margin: 0;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
    
    background-color: #9E9E9E;
    background-image: repeating-linear-gradient(45deg,
      hsla(0, 0%, 100%, 0.3), hsla(0, 0%, 100%, 0.3) 1px,
      hsla(0, 0%, 100%, 0.05) 0, hsla(0, 0%, 100%, 0.05) 20px);
  }
  .main-header {
    text-align: center;
    font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
    color: white;
    font-weight: 300;
    font-size: 3rem;
    padding: 0;
    margin: 0;
  }
  
  .about-link {
    background-color: #FF5722;
    font-family: Verdana, Geneva, sans-serif;
    border: 1px solid #FFAB91;
    border-radius: 6px;
    color: white;
    font-size: 1.5rem;
    display: inline-block;
    text-align: center;
    padding: 0.4em 2rem;
    text-decoration: none;
    margin-top: 25px;
    transition-duration: 0.2s;
  }
  .about-link:hover {
    background-color: #E64A19;
  }
  .profile-bubble {
    overflow: hidden;
    width: 65px;
    height: 65px;
    position: fixed;
    border-radius: 100%;
    border: 1.5px solid white;
    top: 30px;
    right: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .profile-pic {
    height: 100%;
    width: auto;
    display: block;
    transition: 0.3s;
  }
  .profile-pic:hover {
    transform: scale(1.3);
  }
</style>
<h1 class="main-header">
  Welcome home.
</h1>
<%= link_to "About", about_path, class: "about-link" %>
<%= link_to image_tag('Desiigner.jpg', class: 'profile-pic'), 'https://www.instagram.com/lifeofdesiigner/', class: 'profile-bubble' %>
